[core]
  pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor = vim -f
  autocrlf = input
  excludesfile = /Users/jstremick/.gitignore_global
[user]
  name = James Stremick
  email = james.stremick@vocalocity.com
[credential]
  helper = osxkeychain
[push]
  default = simple
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = blue
  frag = magenta
  old  = red
  new  = green
[color "status"]
  added = yellow
  changed = green
  untracked = blue
[alias]
  a   = add -u
  aa  = add -A
  co = checkout
  com = commit
  d   = diff
  ds  = diff --staged
  dw  = diff --color-words
  l = log --pretty='format:%C(yellow)%h%C(reset) %C(blue)%ad%C(reset) %s%C(red)%d%C(reset) %C(green)%an%C(reset), %C(cyan)%ar%C(reset)' --date=short
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  sm  = submodule
  smu = submodule foreach git pull origin master
  st = status
  w   = whatchanged --decorate
  wp  = whatchanged --decorate -p
